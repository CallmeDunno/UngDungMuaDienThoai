<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:gravity="center"
    android:padding="16dp"
    tools:context=".fFragment.TutorialFragment2">

    <ImageView
        android:layout_width="218dp"
        android:layout_height="412dp"
        android:src="@drawable/tutorial" />
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Bạn có thể xem lại hướng dẫn sử dụng ứng dụng bất kì lúc nào ở chức năng 'Hướng dẫn'. Bấm GET START để quay lại trang chủ và sử dụng ứng dụng nhé!"
        android:textSize="18sp"
        android:gravity="center"
        android:textColor="@color/black"
        android:layout_marginTop="20dp"
        />

    <Button
        android:id="@+id/btn_getStartOanh"
        android:layout_width="200dp"
        android:layout_height="wrap_content"
        android:background="@drawable/btn_selector"
        android:text="Get start"
        android:layout_marginTop="20dp"
        android:textColor="@color/black"
        />
</LinearLayout>