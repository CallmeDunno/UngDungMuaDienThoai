<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@drawable/btn_selector2"
    app:cardCornerRadius="16dp">
    <data>
        <variable
            name="HistoryFragmentViewModel"
            type="com.example.qlbdt.fFragment.History.HistoryFragmentViewModel" />
    </data>

    <androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        xmlns:tools="http://schemas.android.com/tools"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/btn_selector2"
        app:cardCornerRadius="16dp">

        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="110dp">

            <ImageView
                android:id="@+id/imgProduct_kien"
                android:layout_width="85dp"
                android:layout_height="85dp"
                android:layout_marginStart="6dp"
                android:layout_marginTop="6dp"
                android:src="@mipmap/ic_launcher"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent" />

            <TextView
                android:id="@+id/nameProduct_kien"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="6dp"
                android:layout_marginTop="6dp"
                android:text="@{HistoryFragmentViewModel.nameSmartPhone}"
                android:textColor="@color/black"
                android:textStyle="bold"
                app:layout_constraintStart_toEndOf="@+id/imgProduct_kien"
                app:layout_constraintTop_toTopOf="parent" />

            <TextView
                android:id="@+id/colorProduct_kien"
                android:layout_width="128dp"
                android:layout_height="29dp"
                android:layout_marginStart="4dp"
                android:layout_marginTop="16dp"
                android:text="@{HistoryFragmentViewModel.color}"
                app:layout_constraintStart_toEndOf="@+id/imgProduct_kien"
                app:layout_constraintTop_toBottomOf="@+id/nameProduct_kien" />

            <TextView
                android:id="@+id/ordertime_kien"
                android:layout_width="149dp"
                android:layout_height="19dp"
                android:layout_marginStart="5dp"
                android:layout_marginTop="4dp"
                android:text="@{HistoryFragmentViewModel.orderTime}"
                android:textStyle="bold"
                app:layout_constraintEnd_toStartOf="@+id/priceProduct_kien"
                app:layout_constraintHorizontal_bias="0.09"
                app:layout_constraintStart_toEndOf="@+id/imgProduct_kien"
                app:layout_constraintTop_toBottomOf="@+id/colorProduct_kien" />

            <TextView
                android:id="@+id/priceProduct_kien"
                android:layout_width="139dp"
                android:layout_height="19dp"
                android:layout_marginStart="28dp"
                android:layout_marginTop="48dp"
                android:text="@{HistoryFragmentViewModel.priceSmartPhone}"
                android:textColor="#EA3E3E"
                android:textStyle="bold"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintHorizontal_bias="0.0"
                app:layout_constraintStart_toEndOf="@+id/colorProduct_kien"
                app:layout_constraintTop_toBottomOf="@+id/nameProduct_kien" />

        </androidx.constraintlayout.widget.ConstraintLayout>
    </androidx.cardview.widget.CardView>
</layout>
