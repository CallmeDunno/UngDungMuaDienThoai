<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/btn_selector2"
    >

    <ImageView
        android:id="@+id/imgProduct_kien"
        android:layout_width="90dp"
        android:layout_height="96dp"
        android:layout_marginStart="16dp"
        android:layout_marginTop="16dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        tools:srcCompat="@tools:sample/avatars" />

    <TextView
        android:id="@+id/nameProduct_kien"
        android:layout_width="275dp"
        android:layout_height="30dp"
        android:layout_marginTop="16dp"
        android:text="tên sản phẩm"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.333"
        app:layout_constraintStart_toEndOf="@+id/imgProduct_kien"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/colorProduct_kien"
        android:layout_width="63dp"
        android:layout_height="27dp"
        android:layout_marginStart="8dp"
        android:layout_marginTop="8dp"
        android:text="màu sắc"
        app:layout_constraintStart_toEndOf="@+id/imgProduct_kien"
        app:layout_constraintTop_toBottomOf="@+id/nameProduct_kien" />

    <TextView
        android:id="@+id/ordertime_kien"
        android:layout_width="106dp"
        android:layout_height="27dp"
        android:layout_marginStart="5dp"
        android:layout_marginTop="4dp"
        android:text="Ngày mua"
        app:layout_constraintEnd_toStartOf="@+id/priceProduct_kien"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toEndOf="@+id/imgProduct_kien"
        app:layout_constraintTop_toBottomOf="@+id/colorProduct_kien" />

    <TextView
        android:id="@+id/priceProduct_kien"
        android:layout_width="81dp"
        android:layout_height="32dp"
        android:layout_marginTop="36dp"
        android:layout_marginEnd="16dp"
        android:text="Giá"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="1.0"
        app:layout_constraintStart_toEndOf="@+id/colorProduct_kien"
        app:layout_constraintTop_toBottomOf="@+id/nameProduct_kien" />
</androidx.constraintlayout.widget.ConstraintLayout>