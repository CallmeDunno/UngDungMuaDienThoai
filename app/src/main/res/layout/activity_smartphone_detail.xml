<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".fActivity.SmartphoneDetailActivity">

    <LinearLayout
        android:id="@+id/linearlayout_smp_detail_top"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/color_main"
        android:orientation="horizontal">

        <ImageView
            android:id="@+id/img_back_smp_detail"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_margin="10dp"
            android:scaleType="centerCrop"
            android:src="@drawable/ic_arrow_back_30" />

        <TextView
            android:id="@+id/tv_label_smp_detail"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:ellipsize="end"
            android:maxLines="1"
            android:text="Smartphone Detail"
            android:textColor="@color/black"
            android:textSize="24sp" />

    </LinearLayout>

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_above="@+id/linearlayout_smp_detail_bottom"
        android:layout_below="@+id/linearlayout_smp_detail_top"
        android:padding="8dp"
        android:scrollbars="vertical">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">

            <com.jsibbold.zoomage.ZoomageView
                android:id="@+id/img_avt_smp_detail"
                android:layout_width="match_parent"
                android:layout_height="300dp"
                android:src="@mipmap/ic_launcher" />

            <View
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:layout_marginTop="10dp"
                android:background="@color/black" />

            <TextView
                android:id="@+id/tv_name_smp_detail"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginStart="10dp"
                android:layout_marginTop="10dp"
                android:text="Name"
                android:textColor="@color/black"
                android:textSize="30sp"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/tv_price_smp_detail"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginStart="10dp"
                android:layout_marginTop="10dp"
                android:text="Price"
                android:textColor="#FF0000"
                android:textSize="24sp" />

            <TextView
                android:id="@+id/tv_des_smp_detail"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginStart="10dp"
                android:layout_marginTop="10dp"
                android:text="Des"
                android:textSize="24sp" />

            <TableLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginStart="10dp"
                android:layout_marginTop="10dp"
                android:layout_marginBottom="24dp"
                android:stretchColumns="*">

                <TableRow>

                    <TextView
                        android:text="Hãng:"
                        android:textSize="24sp"
                        android:textStyle="bold" />

                    <TextView
                        android:id="@+id/tv_brand_name_smp_detail"
                        android:text="Brand's name"
                        android:textSize="24sp" />

                </TableRow>

                <TableRow>

                    <TextView
                        android:text="CPU:"
                        android:textSize="24sp"
                        android:textStyle="bold" />

                    <TextView
                        android:layout_height="wrap_content"
                        android:layout_width="wrap_content"
                        android:id="@+id/tv_cpu_smp_detail"
                        android:text="CPU"
                        android:textSize="24sp"
                        android:maxLines="1"
                        android:ellipsize="end"/>



                </TableRow>

                <TableRow>

                    <TextView
                        android:text="RAM:"
                        android:textSize="24sp"
                        android:textStyle="bold" />

                    <TextView
                        android:id="@+id/tv_ram_smp_detail"
                        android:text="RAM"
                        android:textSize="24sp" />

                </TableRow>

                <TableRow>

                    <TextView
                        android:text="ROM:"
                        android:textSize="24sp"
                        android:textStyle="bold" />

                    <TextView
                        android:id="@+id/tv_rom_smp_detail"
                        android:text="ROM"
                        android:textSize="24sp" />

                </TableRow>

                <TableRow>

                    <TextView
                        android:text="Màu sắc:"
                        android:textSize="24sp"
                        android:textStyle="bold" />

                    <TextView
                        android:id="@+id/tv_color_smp_detail"
                        android:text="Color"
                        android:textSize="24sp" />

                </TableRow>

                <TableRow>

                    <TextView
                        android:text="Pin:"
                        android:textSize="24sp"
                        android:textStyle="bold" />

                    <TextView
                        android:id="@+id/tv_battery_smp_detail"
                        android:text="Battery"
                        android:textSize="24sp" />

                </TableRow>

                <TableRow>

                    <TextView
                        android:text="Cân nặng:"
                        android:textSize="24sp"
                        android:textStyle="bold" />

                    <TextView
                        android:id="@+id/tv_weight_smp_detail"
                        android:text="Weight"
                        android:textSize="24sp" />

                </TableRow>

                <TableRow>

                    <TextView
                        android:text="TGBH:"
                        android:textSize="24sp"
                        android:textStyle="bold" />

                    <TextView
                        android:id="@+id/tv_wp_smp_detail"
                        android:text="warrantyPeriod"
                        android:textSize="24sp" />

                </TableRow>

            </TableLayout>

        </LinearLayout>

    </ScrollView>

    <LinearLayout
        android:id="@+id/linearlayout_smp_detail_bottom"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_marginBottom="6dp"
        android:orientation="horizontal"
        android:weightSum="2">

        <Button
            android:id="@+id/btn_buy_smp_detail"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="wrap_content"
            android:background="@drawable/btn_selector"
            android:layout_margin="8dp"
            android:text="Mua ngay" />

        <Button
            android:layout_weight="1"
            android:id="@+id/btn_add_basket_smp_detail"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_margin="8dp"
            android:background="@drawable/btn_selector2"
            android:text="Thêm vào giỏ hàng" />

    </LinearLayout>

</RelativeLayout>