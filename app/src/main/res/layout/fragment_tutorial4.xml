<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:gravity="center"
    android:orientation="vertical"
    android:padding="16dp"
    tools:context=".fFragment.TutorialFragment2">

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="380dp">

        <ImageView
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:src="@drawable/chitiet1_tutorial" />

        <ImageView
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:src="@drawable/chitiet2_tutorial" />
    </LinearLayout>


    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp"
        android:gravity="center"
        android:text="Khi bấm vào sản phẩm, bạn sẽ thấy giao diện hiển thị chi tiết của sản phẩm. Chọn MUA NGAY để mua sản phẩm, sau khi mua bạn sẽ thấy thông báo đã mua sản phẩm thành công."
        android:textColor="@color/black"
        android:textSize="18sp" />
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="5dp"
        android:gravity="center"
        android:text="Chọn THÊM VÀO GIỎ HÀNG để thêm sản phẩm vào giỏ hàng của bạn."
        android:textColor="@color/black"
        android:textSize="18sp" />

</LinearLayout>