<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_marginTop="10dp"
    android:layout_marginEnd="10dp"
    app:cardCornerRadius="16dp"
    android:id="@+id/cv_fragment_search">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <ImageView
            android:layout_width="130dp"
            android:layout_height="130dp"
            android:layout_margin="8dp"
            android:id="@+id/img_avt_rcv_fragment_search"
            android:src="@mipmap/ic_launcher"
            android:scaleType="centerCrop"/>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_toEndOf="@id/img_avt_rcv_fragment_search"
            android:orientation="vertical"
            android:layout_centerVertical="true">

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:maxLines="1"
                android:ellipsize="end"
                android:id="@+id/tv_name_rcv_fragment_search"
                android:textSize="24sp"
                android:textStyle="bold"
                android:text="@string/Find" />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/tv_price_rcv_fragment_search"
                android:textSize="16sp"
                android:text="@string/Find"
                android:textColor="#FF0000"
                android:layout_marginBottom="10dp"/>

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/tv_quantity_rcv_fragment_search"
                android:textSize="16sp"
                android:text="@string/Find"
                android:layout_marginBottom="10dp"/>

        </LinearLayout>

    </RelativeLayout>

</androidx.cardview.widget.CardView>