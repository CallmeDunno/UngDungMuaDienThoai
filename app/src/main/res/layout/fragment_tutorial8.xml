<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:gravity="center"
    android:orientation="vertical"
    android:padding="16dp"
    tools:context=".fFragment.TutorialFragment2">

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="408dp">

        <ImageView
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:src="@drawable/history_tutorial" />

        <ImageView
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:src="@drawable/history_detail_tutorial" />
    </LinearLayout>


    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp"
        android:textColor="@color/black"
        android:gravity="center"
        android:text="Chức năng 'Lịch sử mua hàng' sẽ giúp bạn xem lại lịch sử mua sản phẩm của mình. Bấm vào sản phẩm để xem chi tiết đơn mua nhé!"
        android:textSize="18sp" />

</LinearLayout>