<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    package="com.example.qlbdt">

    <uses-permission android:name="android.permission.READ_EXTERNAL_STORAGE" />

    <application

        android:name=".fOther.Notification"
        android:allowBackup="true"
        android:dataExtractionRules="@xml/data_extraction_rules"
        android:fullBackupContent="@xml/backup_rules"
        android:icon="@mipmap/ic_logo_app"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_logo_app"
        android:supportsRtl="true"
        android:theme="@style/Theme.QLBDT"
        tools:targetApi="31">
        <activity
            android:name=".fActivity.TutorialActivity"
            android:exported="false" />
        <activity
            android:name=".fActivity.SmartphoneDetailActivity"
            android:exported="false" />
        <activity
            android:name=".fActivity.SplashScreenActivity"
            android:exported="true">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name=".fActivity.HomeActivity"
            android:exported="false" />
        <activity
            android:name=".fActivity.RegisterAccountActivity"
            android:exported="false" />
        <activity
            android:name=".fActivity.EditActivity"
            android:exported="false" />

        <meta-data
            android:name="preloaded_fonts"
            android:resource="@array/preloaded_fonts" />
    </application>

</manifest>